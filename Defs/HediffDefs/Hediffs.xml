<?xml version="1.0" encoding="utf-8" ?>

<Defs>

	<HediffDef>
		<defName>AJO_SpectagoTea</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>spectago tea</label>
		<defaultLabelColor>(0,0.5,0.3)</defaultLabelColor>
		<initialSeverity>0.18</initialSeverity>
		<!-- <maxSeverity>1.0</maxSeverity> -->
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.8</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial-hidden</label>
				<everVisible>false</everVisible>
			</li>
			<li>
				<minSeverity>0.01</minSeverity>
				<label>warm</label>
				<socialFightChanceFactor>0.9</socialFightChanceFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.02</offset>
					</li>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>0.1</offset>
					</li>
				</capMods>
			</li>
			<li>
				<minSeverity>0.2</minSeverity>
				<label>relaxed</label>
				<painFactor>0.9</painFactor>
				<socialFightChanceFactor>0.8</socialFightChanceFactor>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.05</offset>
					</li>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>0.2</offset>
					</li>
				</capMods>
			</li>
		</stages>
	</HediffDef>

    <HediffDef ParentName="DrugToleranceBase">
    	<defName>AJO_SpectagoTeaTolerance</defName>
    	<label>Spectago tolerance</label>
    	<comps>
    		<li Class="HediffCompProperties_SeverityPerDay">
    			<severityPerDay>-0.015</severityPerDay>
    		</li>
    		<li Class="HediffCompProperties_DrugEffectFactor">
    			<chemical>SpectagoTea</chemical>
    		</li>
    	</comps>
    </HediffDef>

	<HediffDef ParentName="AddictionBase">
		<defName>AJO_SpectagoTeaAddiction</defName>
		<hediffClass>Hediff_Addiction</hediffClass>
		<label>spectago addiction</label>
		<causesNeed>Chemical_SpectagoTea</causesNeed>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.1</severityPerDay>
			</li>
		</comps>
		<stages>
			<li>
			</li>
			<li>
				<label>withdrawal</label>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.03</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>-0.02</offset>
					</li>
				</capMods>
				<mentalStateGivers>
					<li>
						<mentalState>BingingFood</mentalState>
						<mtbDays>30</mtbDays>
					</li>
					<li>
						<mentalState>WanderSad</mentalState>
						<mtbDays>50</mtbDays>
					</li>
				</mentalStateGivers>
			</li>
		</stages>
	</HediffDef>



</Defs>