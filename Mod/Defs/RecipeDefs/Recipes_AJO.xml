		<workSpeedStat>CookSpeed</workSpeedStat>
		<workAmount>750</workAmount>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>CP_RainbowPetals</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>WoodLog</li>
				<li>CP_RainbowPetals</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<AJO_PaintingSupplies>1</AJO_PaintingSupplies>
		</products>
		<recipeUsers>
			<li>FueledStove</li>
			<li>ElectricStove</li>
		</recipeUsers>
		<skillRequirements>
			<li>
				<skill>Cooking</skill>
				<minLevel>4</minLevel>
			</li>
		</skillRequirements>
		<workSkill>Cooking</workSkill>
	</RecipeDef>

